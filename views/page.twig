{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
					{% if post.title == "Home" %}
					{% else %}
						<h1 class="article-h1">{{post.title}}</h1>
						<br/>
					{% endif %}
				
				<div class="article-body">
				
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}